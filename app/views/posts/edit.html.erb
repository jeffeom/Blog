<h1>Editing Post</h1>

<%= form_for @post do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div>
    <%= f.label :body %>
    <%= f.text_area :body, class: "form-control"%>
  </div>
  <br>
    <%= f.submit class: "btn btn-primary"%>
  <% end %>
