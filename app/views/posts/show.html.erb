<h1><%= @post.title %></h1>
<br>
<div class="well">
  <%= @post.body %>
  <%= link_to "Delete", post_path(@post), method: :delete,
          class: "btn btn-danger btn-sm delete-right", data: {confirm: "Are you use you want to delete this post?"} %>
  <%= link_to "Edit", edit_post_path(@post),
          class: "btn btn-info btn-sm edit-right"%>
</div>

<br>
<br>
<br>

<%= form_for [@post,@comment] do |f| %>
  <div class="form-group">
    <%= f.label :body, "Create New Comments" %>
    <br>
    <%= f.text_area :body, class: "form-control"%>
  </div>
  <%= f.submit class: "btn btn-primary edit-right" %>
  <br>
<% end %>

<%= @comment.errors.full_messages.join(", ") %>

<h2> Comments </h2>
<% @post.comments.each do |comment| %>
  <div class="well">
    <%= comment.body %>
    <%= link_to "Delete", post_comment_path(@post, comment), method: :delete,
              class: "btn btn-danger btn-sm delete-right", data: {confirm: "Are you sure?"} %>
  </div>
<% end %>
